---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Tools & Services — MistyChina',
  description: 'Recommended tools and services for traveling China: internet, eSIM, hotels, transport, and more.',
};
---

<Layout metadata={metadata}>
  <section class="mx-auto max-w-5xl px-4 py-12">
    <h1 class="text-4xl font-bold tracking-tight">Tools & Services</h1>
    <p class="mt-4 text-lg opacity-80">
      Curated recommendations to make your China trip easier. (We’ll add detailed comparisons soon.)
    </p>

    <div class="mt-10 grid gap-4 md:grid-cols-2">
      <a class="rounded-2xl border p-6 hover:shadow-md transition" href="/tools/internet">
        <h2 class="text-xl font-semibold">Internet & eSIM</h2>
        <p class="mt-2 text-sm opacity-80">Stay connected from the moment you land.</p>
      </a>

      <a class="rounded-2xl border p-6 hover:shadow-md transition" href="/tools/hotels">
        <h2 class="text-xl font-semibold">Hotels & Transport</h2>
        <p class="mt-2 text-sm opacity-80">Where to book, and what’s worth it.</p>
      </a>
    </div>

    <div class="mt-10">
      <a class="btn btn-primary" href="/start-here">Start with essentials →</a>
    </div>
  </section>
</Layout>
